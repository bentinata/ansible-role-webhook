[Unit]
Description=Adnan Webhooks
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
User=webhook
Restart=on-failure
RestartSec=5
ExecStart=/usr/local/bin/webhook -verbose -hotreload -hooks /etc/webhooks.json -port {{ webhook_port }} {{ optional_args }}

[Install]
WantedBy=multi-user.target
